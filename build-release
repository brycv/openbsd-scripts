################################################################################
#
# Variables for release building. This script assumes you have already run the
# build-current or build stable some other way. As with build-release, this
# script also assumes it is being run as root. This is probably not the best
# practice and some changes should be made in the future to change this.

export DESTDIR=/dest
export RELEASEDIR=/usr/rel
mkdir -p ${DESTDIR} ${RELEASEDIR}
chown build:wobj /dest
chmod 700 /dest
chown build:wobj /usr/rel
chmod 775 /usr/rel

################################################################################

TIMESTAMP=`date +%Y%m%d%H%M%S`

buildrelease() {
	cd /usr/src/etc && make release
	cd /usr/src/distrib/sets && sh checkflist
	echo ""
	echo "     release built"
	echo ""
	return 0
}

buildxrelease() {
	cd /usr/xenocara && make release
	cd /usr/xenocara && make checkdist
	echo ""
	echo "     xenocara release built"
	echo ""
	return 0
}

buildall() {
	buildrelease
	buildxrelease
	echo ""
	echo "     Build of release and xenocara release"
	echo "     Started: ${TIMESTAMP}"
	echo "     Completed: `date +%Y%m%d%H%M%S`"
	echo ""
	return 0
}

buildiso() {
	export RELDIR=/usr/rel
	export RELXDIR=/usr/rel
	cd /usr/src/distrib/`uname -m`/iso && make
	make install
	unset RELDIR RELXDIR
}

finalrelease() {
	buildiso
	cd /usr/rel
	ls -nT > index.txt
	sha256 * > SHA256
}

case $1 in
	release)
		buildrelease
	;;
	xrelease|x)
		buildxrelease
	;;
	all)
		buildall
		finalrelease
	;;
	iso)
		buildiso
	;;
	finish)
		finalrelease	
	;;
	*)
		echo "Usage: build-release release|xrelease|iso|finish|all"
	;;
esac
